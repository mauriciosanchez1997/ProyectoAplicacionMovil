<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/idLayoutRegistrar"
                tools:context="com.example.webservicesimagealdo.fragments.RegistrarUsuarioFragment"
>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="574dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="31dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/labelRegistrarUusarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="REGISTRO DE USUARIOS"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:orientation="horizontal"
                android:visibility="invisible">

            <EditText
                    android:id="@+id/campoDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Usuario"
                    android:textColor="#0A0A08" />

            <Button
                    android:id="@+id/btnFoto"
                    android:layout_width="16dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/side_nav_bar"
                    android:text="Foto"
                    android:textColor="@android:color/white" />

        </LinearLayout>

        <EditText
                android:id="@+id/txtUsuario"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName" />

        <EditText
                android:id="@+id/campoNombre"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:hint="Nombre"
                android:textColor="#CDDC39" />

        <EditText
                android:id="@+id/campoProfesion"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:hint="Apellidos" />


        <Spinner
                android:id="@+id/spPermisos"
                android:layout_width="match_parent"
                android:layout_height="52dp" />

        <EditText
                android:id="@+id/txtPassword"
                android:layout_width="427dp"
                android:layout_height="66dp"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword" />

        <Spinner
                android:id="@+id/spStatus"
                android:layout_width="match_parent"
                android:layout_height="41dp" />

        <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="7dp"
                android:layout_height="5dp"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/side_nav_bar"
                android:src="@drawable/img_base"
                android:visibility="invisible" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:orientation="horizontal"></LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/botonregistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_salir"
                    android:text="GUARDAR" />

            <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_entrar"
                    android:text="CANCELAR" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
